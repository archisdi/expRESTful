{
  "name": "exprestful",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "nodemon ./server.js",
    "server": "node ./server.js",
    "clean-install": "rm -rf node_modules package-lock.json && npm install --save",
    "migrate": "./scripts/migrations/migrate.sh",
    "migrate:rollback": "./scripts/migrations/rollback.sh",
    "migrate:refresh": "./scripts/migrations/refresh.sh",
    "db:seed": "./scripts/migrations/seed.sh",
    "tests": "NODE_ENV=test nyc --reporter=html --reporter=text ava --verbose",
    "tests-report": "open coverage/index.html",
    "lint": "eslint --fix app/**"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "~1.18.2",
    "cors": "^2.8.4",
    "debug": "~2.6.9",
    "dotenv": "^5.0.1",
    "express": "~4.15.5",
    "express-rate-limit": "^2.11.0",
    "helmet": "^3.12.0",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.2.0",
    "moment": "^2.21.0",
    "mongoose": "^5.2.7",
    "morgan": "~1.9.0",
    "mysql2": "^1.5.2",
    "randomstring": "^1.1.5",
    "sequelize": "^4.35.2",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "nodemon": "^1.17.1",
    "nyc": "^11.6.0",
    "supertest": "^3.0.0"
  },
  "nyc": {
    "per-file": true,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "reporter": [
      "lcov"
    ],
    "exclude": [
      "app/repositories/*.js",
      "tests/**"
    ]
  },
  "ava": {
    "files": [
      "tests/**/*.test.js"
    ],
    "failFast": false,
    "failWithoutAssertions": false,
    "tap": false,
    "powerAssert": true
  }
}
